[Unit]
Description=Electrum Daemon (Percy)
After=syslog.target network.target

[Service]
User=percy
Group=percy
Type=forking
ExecStart=source /var/percy/electrum/bin/activate ; /var/percy/electrum/bin/electrum daemon start
ExecStop=source /var/percy/electrum/bin/activate ; /var/percy/electrum/bin/electrum daemon stop
Restart=always

[Install]
WantedBy=multi-user.target
